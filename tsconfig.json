{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}